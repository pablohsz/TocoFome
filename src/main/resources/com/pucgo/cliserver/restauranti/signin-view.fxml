      <Button fx:id="signinButton" layoutX="127.0" layoutY="426.0" mnemonicParsing="false" onAction="#signinOnClick" style="-fx-pref-width: 100; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-color: #FF5722; -fx-background-radius: 15;" text="CADASTRAR" textFill="WHITE" />
