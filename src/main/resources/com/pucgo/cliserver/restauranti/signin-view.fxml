<AnchorPane prefHeight="500.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pucgo.cliserver.restauranti.SignController">
   <children>
      <ImageView fitHeight="49.0" fitWidth="131.0" layoutX="116.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/toco_fome_logoname.png" />
         </image>
      </ImageView>
      <Label layoutX="135.0" layoutY="116.0" text="CRIAR CONTA" textFill="#606060">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="userTextField" layoutX="46.0" layoutY="162.0" prefHeight="25.0" prefWidth="260.0" promptText="Username" style="-fx-background-color: #FFCCBC; -fx-background-radius: 12; -fx-prompt-text-fill: #757575;">
         <font>
            <Font size="13.0" />
         </font></TextField>
      <TextField fx:id="nameTextField" layoutX="46.0" layoutY="211.0" prefHeight="25.0" prefWidth="260.0" promptText="Nome" style="-fx-background-color: #FFCCBC; -fx-background-radius: 12; -fx-prompt-text-fill: #757575;">
