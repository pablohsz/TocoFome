            <Font size="13.0" />
         </font></TextField>
      <TextField fx:id="emailTextField" layoutX="47.0" layoutY="261.0" prefHeight="25.0" prefWidth="260.0" promptText="E-mail" style="-fx-background-color: #FFCCBC; -fx-background-radius: 12; -fx-prompt-text-fill: #757575;">
